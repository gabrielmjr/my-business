<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"   
    android:layout_height="wrap_content" 
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/choose_product_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/choose_product_name"
            app:layout_constraintHorizontal_bias=".3"/>

        <TextView
            android:id="@+id/choose_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="@id/choose_product_image"
            app:layout_constraintBottom_toTopOf="@+id/choose_product_amount"
            app:layout_constraintStart_toEndOf="@id/choose_product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".5"/>

        <TextView
            android:id="@+id/choose_product_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/choose_product_name"
            app:layout_constraintBottom_toBottomOf="@id/choose_product_image"
            app:layout_constraintStart_toStartOf="@id/choose_product_name"
            app:layout_constraintEnd_toStartOf="@+id/choose_product_price"
            app:layout_constraintHorizontal_bias=".05"/>

        <TextView
            android:id="@+id/choose_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/choose_product_name"
            app:layout_constraintBottom_toBottomOf="@id/choose_product_image"
            app:layout_constraintStart_toEndOf="@id/choose_product_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".05"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
